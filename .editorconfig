# EditorConfig - https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = tab
indent_size = 4
tab_width = 4
max_line_length = 120

[*.{gradle,groovy}]
indent_style = tab
indent_size = 4
tab_width = 4

[*.{xml,html,htm,sql}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.properties]
charset = utf-8
